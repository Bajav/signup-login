<body>
    <div class="signUp">
    <h1 class="font-medium text-2xl text-center">welcome please sign up on our App</h1>
    <h4><%= dontMatch %></h4>
    <section>
        <form action="/signUp" method="post">
            <div class="inputs flex flex-col">
                <label for="first name">first name</label>
                <input type="text" name="fName" id="firstName" placeholder="please enter first name">
            </div>
            <div class="inputs flex flex-col">
                <label for="first name">last name</label>
                <input type="text" name="lName" id="lastName" placeholder="please enter last name">
            </div>
            <div class="inputs flex flex-col">
                <label for="email">email</label>
                <input type="email" name="email" id="email" placeholder="please enter email">
            </div>
            <div class="inputs flex flex-col">
                <label for="password">password </label>
                <input type="text" name="password" id="password" placeholder="please enter password">
            </div>

            <div class="inputs flex flex-col">
                <label for="rePassword">re enter password </label>
                <input type="text" name="rePassword" id="rePassword" placeholder="please re enter password">
            </div>

            <button type="submit">sign up</button>
        </form>
    </section>
</div>
